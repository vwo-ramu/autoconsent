{
  "compilerOptions": {
    "target": "ES2020",
    "typeRoots": ["node_modules/web-ext-types"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "declaration": true
  },
  "include": [
    "lib/**/*.ts",
  ],
  "exclude": [
    "node_modules/*",
    "playwright.config.ts",
    "tests/*"
  ]
}

